<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PlacesCategoryStyle">
        <item name="android:fontFamily"
              tools:targetApi="jelly_bean">serif
        </item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ShortInfoStyle">
        <item name="android:fontFamily"
              tools:targetApi="jelly_bean">serif
        </item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlacesInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily"
              tools:targetApi="jelly_bean">sans-serif</item>
    </style>
</resources>
